{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["es6", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/dist", "**/*.spec.ts" ,"**/*.md", "**/rollup.config.js"]
}
